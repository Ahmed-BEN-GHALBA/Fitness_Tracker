<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="415dp"
        android:layout_height="825dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background4"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:padding="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/image11" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins2"
                    android:text="BMI Calculator"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110px"
                    android:layout_height="110px"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/image22" />

                <TextView
                    android:id="@+id/textView15"
                    android:alpha="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins2"
                    android:text="Food recipes"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:padding="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="160px"
                    android:layout_height="130px"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/image66" />

                <TextView
                    android:id="@+id/textView16"
                    android:alpha="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins2"
                    android:text="Workout Plans"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:layout_weight="1"
                    android:alpha="0.9"
                    android:layout_gravity="center"
                    android:src="@drawable/image44" />

                <TextView
                    android:id="@+id/textView17"
                    android:alpha="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins2"
                    android:text="SmartWatch"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="110px"
                    android:layout_height="110px"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/image33" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins2"
                    android:text="Timer"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

            <LinearLayout
                android:alpha="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="110px"
                    android:layout_height="110px"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/image55" />

                <TextView
                    android:id="@+id/textView19"
                    android:alpha="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins2"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popins"
            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logout" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>