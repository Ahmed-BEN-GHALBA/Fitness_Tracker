<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="429dp"
        android:layout_height="820dp"
        android:layout_marginTop="4dp"
        android:alpha="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/workout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="449dp"
        android:layout_height="165dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/ubuntu"
        android:padding="3dp"
        android:text="Make your body healthier and "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="65dp"
        android:layout_marginTop="264dp"
        android:backgroundTint="@color/customOrange"
        android:fontFamily="@font/popins"
        android:text="Get started"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="321dp"
        android:layout_height="71dp"
        android:layout_marginTop="92dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins2"
        android:maxLines="3"
        android:text="Looking to exercise and get healthy ?       Here are the best free fitness app for working out, tracking your diet, and more."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:alpha="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-65dp"
        android:fontFamily="@font/ubuntu"
        android:text="Stronger"
        android:textColor="@color/customOrange"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_marginTop="120dp"
        android:alpha="0.7"
        android:fontFamily="@font/poppins2"
        android:gravity="center"
        android:text="Copyright Â© 2023 Ahmed Amine BEN GHALBA.       All rights reserved."
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


</androidx.constraintlayout.widget.ConstraintLayout>