<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMI_Result"
    android:background="#000000">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="446dp"
        android:layout_height="383dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="348dp"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <androidx.cardview.widget.CardView
            android:layout_width="346dp"
            android:layout_height="148dp"
            android:layout_margin="1dp"
            android:backgroundTint="#131313"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/popins"
                android:text="Your BMI :"
                android:width="1000dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/BMI_textView"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/popins"
                android:ems="10"
                android:textAlignment="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="45dp" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="348dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview">

        <androidx.cardview.widget.CardView
            android:id="@+id/ResultCardView"
            android:layout_width="346dp"
            android:layout_height="58dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/Result"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/popins"
                android:ems="10"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Check out our Workout plans and Food recipes and much more !"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview2" />

</androidx.constraintlayout.widget.ConstraintLayout>